<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context="com.example.indrapro.indra_1202152164_modul2.dinein">

    <LinearLayout
        android:id="@+id/linearLayout3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Customer"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/namapelanggan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:hint="Name" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignLeft="@+id/namapelanggan"
        android:layout_alignStart="@+id/namapelanggan"
        android:layout_below="@+id/namapelanggan"
        android:layout_marginTop="21dp"
        android:text="No. Meja :" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignEnd="@+id/namapelanggan"
        android:layout_alignRight="@+id/namapelanggan"
        android:layout_alignTop="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="PILIH PESANAN"
        android:id="@+id/pilihpesananBtn"
        android:onClick="pesan"/>


</RelativeLayout>
